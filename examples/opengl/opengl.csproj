	</PropertyGroup>

	<ItemGroup>
	  <PackageReference Include="OpenTK.NETCore" Version="1.1.2749.6433" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\..\src\Graphics\sfml-graphics.csproj" />
		<ProjectReference Include="..\..\src\System\sfml-system.csproj" />
		<ProjectReference Include="..\..\src\Window\sfml-window.csproj" />
	</ItemGroup>

	<ItemGroup>
	  <None Update="resources\background.jpg">
	    <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
	  </None>
	  <None Update="resources\sansation.ttf">
	    <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
	  </None>
	  <None Update="resources\texture.jpg">
	    <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
	  </None>
	</ItemGroup>

</Project>
